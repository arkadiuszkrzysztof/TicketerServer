<% if @event.errors.any? %>
    <div id="errors">
        <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<%= form_for @event do |f| %>
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :fullName %><br>
        <%= f.text_field :fullName %>
    </p>
    <p>
        <%= f.label :owner_id %><br>
        <%= f.collection_select(:owner_id, @organizations, 'id', 'fullName') %>
    </p>
    <p>
        <%= f.label :location_id %><br>
        <%= f.collection_select(:location_id, @locations, 'id', 'fullName') %>
    </p>
    <p id="startDate">
        <%= f.label :startDate %><br>
        <%= f.text_field :startDate %>
    </p>
    <p id="endDate">
        <%= f.label :endDate %><br>
        <%= f.text_field :endDate %>
    </p>
    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :tags %><br>
        <%= f.text_area :tags %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<script>
    $(document).ready(function(){
        $("#startDate input").datepicker({
            dateFormat: "yy-mm-dd"
        });
        $("#endDate input").datepicker({
            dateFormat: "yy-mm-dd"
        });
    });
</script>