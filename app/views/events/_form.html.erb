<% if @event.errors.any? %>
    <div id="errors">
        <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<%= form_for @event do |f| %>
    <table id="formTable">
        <tr class="formRow">
            <td class="formCell">
                <%= f.label "Event name" %><br>
                <%= f.text_field :name, :class => "formTextfield" %>
            </td>
            <td class="formCell">
                <%= f.label "Event full name" %><br>
                <%= f.text_field :fullName, :class => "formTextfield" %>
            </td>
        </tr>
        <tr class="formRow">
            <td class="formCell">
                <%= f.label "Administrator" %><br>
                <%= f.collection_select(:owner_id, @organizations, 'id', 'fullName') %>
            </td>
            <td class="formCell">
                <%= f.label "Location" %><br>
                <%= f.collection_select(:location_id, @locations, 'id', 'fullName') %>
            </td>
        </tr>
        <tr class="formRow">
            <td class="formCell">
                <%= f.label "Start date (YYYY-MM-DD)" %><br>
                <%= f.text_field :startDate, :class => "formTextfield", :id => "startDate" %>
            </td>
            <td class="formCell">
                <%= f.label "End date (YYYY-MM-DD)" %><br>
                <%= f.text_field :endDate, :class => "formTextfield", :id => "endDate" %>
            </td>
        </tr>
        <tr class="formRow">
            <td class="formCell">
                <%= f.label "Event description" %><br>
                <%= f.text_area :description, :class => "formTextarea" %>
            </td>
            <td class="formCell">
                <%= f.label "Tags" %><br>
                <%= f.text_area :tags, :class => "formTextarea" %>
            </td>
        </tr>
        <tr class="formRow">
            <td class="formCell formCenter" colspan="2">
                <%= f.submit "Save Event", :class => "formSubmit" %>
            </td>
        </tr>
    </table>
<% end %>

<script>
    $(document).ready(function(){
        $("#startDate").datepicker({
            dateFormat: "yy-mm-dd"
        });
        $("#endDate").datepicker({
            dateFormat: "yy-mm-dd"
        });
    });
</script>