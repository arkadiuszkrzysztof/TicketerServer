<% if @locations.blank? %>
    <%= render 'empty' %>
<% else %>
    <table  id="resultTable" cellspacing="0" cellpadding="0">
      <tr class="resultRow">
        <th class="tableHeader leftRadious">Location name</th>
        <th class="tableHeader">Capacity</th>
        <th class="tableHeader">Phone</th>
        <th class="tableHeader">Email</th>
        <th class="tableHeader rightRadious">Action</th>
      </tr>
     
      <% @locations.each do |location| %>
        <tr class="resultRow">
          <td class="resultCellLeft locationName"><%= location.fullName %></td>
          <td class="resultCellLeft locationCapacity"><%= location.capacity %></td>
          <td class="resultCellLeft locationPhone"><%= location.phone %></td>
          <td class="resultCellLeft locationEmain"><%= location.email %></td>
          <td class="resultCellCenter resultAction">
            <%= link_to (image_tag "magnifying13.png", :class => "quickShort"), location %>
            <%= link_to (image_tag "edit45.png", :class => "quickShort sidePadding"), edit_location_path(location) %>
            <%= link_to image_tag("rubbish7.png", :class => "quickShort"), location, method: :delete, data: {confirm: "Are you sure?"} %>
          </td>
        </tr>
      <% end %>
    </table>
<% end %>