<h1>Locations</h1>

<% if @locations.blank? %>
    <p>Empty!</p>
<% else %>
    <table border="1">
      <tr>
        <th>Name</th>
        <th>Full name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Description</th>
        <th>Capacity</th>
        <th>Tags</th>
        <th>Actions</th>
      </tr>
     
      <% @locations.each do |location| %>
        <tr>
          <td><%= location.name %></td>
          <td><%= location.fullName %></td>
          <td><%= simple_format(location.address) %></td>
          <td><%= location.phone %></td>
          <td><%= location.email %></td>
          <td><%= location.description %></td>
          <td><%= location.capacity %></td>
          <td><%= location.tags %></td>
          <td>
            <%= link_to "Edit", edit_location_path(location) %><br>
            <%= link_to "Remove", location, method: :delete, data: {confirm: "Are you sure?"} %>
          </td>
        </tr>
      <% end %>
    </table>
<% end %>