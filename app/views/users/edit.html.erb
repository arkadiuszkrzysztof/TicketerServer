<h1>Edit User</h1>
<%= form_for :user, url: users_path(@user), method: :path do |f| %>
    <%= if @user.errors.any? %>
        <p>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </p>
    <% end %>
    <p>
        <%= f.label :login %><br>
        <%= f.text_field :login %>
    </p>
    <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_co %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>