<%= form_for :user, url: users_path do |f| %>
    <p>
        <%= f.label :login %><br>
        <%= f.text_field :login %>
    </p>
    <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_co %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>